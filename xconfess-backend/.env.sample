# ──────────────────────── Database ────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=xconfess

# ──────────────────────── Auth ───────────────────────────
JWT_SECRET=your_jwt_secret

# ──────────────────────── App ────────────────────────────
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000
APP_SECRET=your_app_secret_for_signed_urls

# ──────────────────────── Encryption ─────────────────────
# Must be exactly 32 characters for AES-256
CONFESSION_AES_KEY=12345678901234567890123456789012

# ──────────────────────── Redis ──────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=             # optional — leave blank for local

# ──────────────────────── Email (Nodemailer / SMTP) ──────
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=no-reply@xconfess.com

# ──────────────────────── Stellar (optional) ─────────────
# STELLAR_NETWORK=testnet
# STELLAR_SECRET_KEY=
# STELLAR_PUBLIC_KEY=
# STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# ──────────────────────── Rate Limiting ──────────────────
# THROTTLE_TTL=900             # 15 min (seconds)
# THROTTLE_LIMIT=100           # max requests per TTL

# POST_RATE_LIMIT=5
# POST_RATE_WINDOW=60
# GET_RATE_LIMIT=30
# GET_RATE_WINDOW=60

# ──────────────────────── DLQ Retention ──────────────────
# DLQ_RETENTION_DAYS=30
# DLQ_CLEANUP_BATCH_SIZE=100
# DLQ_DRY_RUN=true