{
  "name": "xconfess",
  "private": true,
  "workspaces": [
    "xconfess-contract"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=xconfess-backend\" \"npm run dev --workspace=xconfess-frontend\"",
    "dev:backend": "npm run dev --workspace=xconfess-backend",
    "dev:frontend": "npm run dev --workspace=xconfess-frontend",

    "backend:build": "npm run build --workspace=xconfess-backend",
    "backend:test": "npm run test --workspace=xconfess-backend",
    "backend:test:e2e": "npm run test:e2e --workspace=xconfess-backend",
    "backend:lint": "npm run lint --workspace=xconfess-backend",

    "contract:build": "npm run build --workspace=xconfess-contract",
    "contract:build:release": "npm run build:release --workspace=xconfess-contract",
    "contract:test": "npm run test --workspace=xconfess-contract",
    "contract:test:integration": "npm run test:integration --workspace=xconfess-contract",
    "contract:lint": "npm run lint --workspace=xconfess-contract",
    "contract:fmt": "npm run fmt --workspace=xconfess-contract",
    "contract:fmt:check": "npm run fmt:check --workspace=xconfess-contract",
    "contract:clean": "npm run clean --workspace=xconfess-contract",
    "contract:deploy:testnet": "npm run deploy:testnet --workspace=xconfess-contract",

    "build": "npm run backend:build && npm run contract:build:release",
    "test": "npm run backend:test && npm run contract:test",
    "lint": "npm run backend:lint && npm run contract:lint",
    "ci:backend": "npm run backend:build && npm run backend:lint && npm run backend:test",
    "ci:contract": "npm run contract:fmt:check && npm run contract:lint && npm run contract:test && npm run contract:build:release",
    "ci": "npm run ci:backend && npm run ci:contract"
  },
  "dependencies": {
    "@faker-js/faker": "^10.2.0",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "^11.1.5",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/testing": "^11.1.5",
    "@stellar/freighter-api": "^6.0.1",
    "@stellar/stellar-sdk": "^14.4.3",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "sanitize-html": "^2.17.0",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/sanitize-html": "^2.16.0",
    "babel-jest": "^30.2.0",
    "concurrently": "^8.2.2",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2"
  },
  "packageManager": "npm@10.9.3"
}